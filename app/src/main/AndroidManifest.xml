<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joshtwigg.cmus.droid"
    android:versionCode="8"
    android:versionName="1.4.3">

    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:debuggable="false">
        <activity
            android:name=".ActivityRemote"
            android:label="@string/app_name"
            android:theme="@style/Theme.Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityHostManager"
            android:label="@string/host_manager_label"
            android:theme="@style/Theme.Activity"></activity>
        <activity
            android:name=".ActivityHostDialog"
            android:label="@string/host_dialog_label"
            android:theme="@style/Theme.Dialog"></activity>
        <activity
            android:name=".ActivityWelcome"
            android:theme="@style/Theme.Dialog"></activity>
    </application>
</manifest>